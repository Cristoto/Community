{% extends "Section/ListSection.html.twig" %}

{% block sectionBody %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ i18n.trans('title') }}</th>
                <th class="text-right">{{ i18n.trans('date') }}</th>
            </tr>
        </thead>
        <tbody>
            {% set section = fsc.getCurrentSection() %}
            {% for issue in section.cursor %}
                <tr>
                    <td>
                        {% if issue.closed %}
                            <i class="fas fa-lock fa-fw" aria-hidden="true" title="{{ i18n.trans('closed') }}"></i>
                        {% endif %}
                        #{{ issue.idissue }} {{ issue.getContact().fullName() }}
                        {% if issue.lastcommidcontacto %}
                            <i class="fas fa-comments" aria-hidden="true"></i> {{ issue.getLastCommentContact().fullName() }}
                        {% endif %}
                        <br/>
                        <a href="{{ issue.url('public') }}">{{ issue.description() | raw }}</a>
                    </td>
                    <td class="text-right">{{ issue.creationdate }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="bg-warning">
                        {{ i18n.trans('no-data') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}