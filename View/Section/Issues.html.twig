<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ i18n.trans('title') }}</th>
            <th class="text-right">{{ i18n.trans('date') }}</th>
        </tr>
    </thead>
    <tbody>
        {% set section = fsc.getCurrentSection() %}
        {% for issue in section.cursor %}
            <tr>
                <td>
                    #{{ issue.idissue }}
                    <a href="{{ issue.url('public') }}">{{ issue.description() | raw }}</a>
                    <br/>
                    {% if issue.closed %}
                        <span class="label label-error">{{ i18n.trans('closed') }}</span>&nbsp;
                    {% endif %}
                    <small>
                        {% if issue.lastcommidcontacto %}
                            <i class="fa fa-comments-o" aria-hidden="true"></i> {{ issue.getLastCommentContact().fullName() }}
                        {% endif %}
                    </small>
                </td>
                <td class="text-right">{{ issue.creationdate }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="bg-warning">
                    {{ i18n.trans('no-data') }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
