<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ i18n.trans('code') }}</th>
            <th>{{ i18n.trans('description') }}</th>
            <th>{{ i18n.trans('parent') }}</th>
            <th class="text-right">{{ i18n.trans('last-update') }}</th>
        </tr>
    </thead>
    <tbody>
        {% set section = fsc.getCurrentSection() %}
        {% for language in section.cursor %}
            <tr>
                <td>
                    <a href="{{ language.url() }}">{{ language.langcode }}</a>
                </td>
                <td>
                    {{ language.description }}
                    {% if language.mainlanguage %}
                        <span class="label label-success">{{ i18n.trans('default') }}</span>
                    {% endif %}
                </td>
                <td>{{ language.parentcode }}</td>
                <td class="text-right">{{ language.lastmod }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="bg-warning">
                    {{ i18n.trans('no-data') }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
