{% set issue = fsc.getIssue() %}
{% set contact = issue.getContact() %}

<div class="container">
    <div class="columns">
        <div class="column col-2 col-xs-12 text-right">
            <img src="{{ fsc.getGravatar(contact.email) }}" alt="{{ fsc.obfuscateEmail(contact.email) }}" class="custom-img-responsive"/>
        </div>
        <div class="column">
            <h1>Issue #{{ issue.idissue }}</h1>
            <small>{{ issue.creationroute }}</small>
            <div>{{ issue.body | raw }}</div>
            <small>
                <i class="fa fa-user" aria-hidden="true"></i> {{ issue.getContact().fullName() }} |
                <i class="fa fa-calendar" aria-hidden="true"></i> {{ issue.creationdate }} |
                <i class="fa fa-clock-o" aria-hidden="true"></i> {{ issue.lastmod }}
            </small>
        </div>
    </div>
</div>
<br/>