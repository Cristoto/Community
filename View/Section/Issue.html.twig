{% set issue = fsc.getIssue() %}
{% set contact = issue.getContact() %}

<div class="container">
    <div class="columns">
        <div class="column col-2 col-xs-12 text-right">
            <span class="label">{{ contact.fullName() }}</span><br/>
            {% if contact.empresa %}
                <span class="label">{{ contact.empresa }}</span><br/>
            {% endif %}
            <img src="{{ fsc.getGravatar(contact.email) }}" alt="{{ contact.fullName() }}" class="custom-img-responsive"/>
        </div>
        <div class="column">
            {% if issue.closed %}
                <span class="label label-error">{{ i18n.trans('closed') }}</span>
            {% endif %}
            <h1 class="h3">{{ issue.title() }}</h1>
            <small>{{ issue.creationroute }}</small>
            <p>{{ issue.body | raw | nl2br }}</p>
            <small>
                <i class="fa fa-calendar" aria-hidden="true"></i> {{ issue.creationdate }} |
                <i class="fa fa-clock-o" aria-hidden="true"></i> {{ issue.lastmod }}
            </small>
        </div>
    </div>
</div>
<br/>