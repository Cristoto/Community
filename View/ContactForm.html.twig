{% extends "Master/PortalTemplate.html.twig" %}

{% block body %}
    {% import _self as macros %}

    <div class="body-section">
        <br/>
        <div class="container grid-lg">
            <div class="columns">
                <div class="column col-12">
                    {% if fsc.contact %}
                        {{ macros.showFormTrees(fsc, i18n) }}
                    {% else %}
                        {{ macros.showNeedsLogin(appSettings, fsc) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% macro showFormTrees(fsc, i18n) %}
    {% if fsc.currentTree %}
        <h1 class="h2">
            <i class="fa {{ fsc.currentTree.icon }}" aria-hidden="true"></i> {{ fsc.currentTree.title }}
        </h1>
        {{ fsc.currentTree.body() | raw }}
    {% else %}
        <h1>Contacto</h1>
        <p>Seleccione la opción que más se ajuste a su caso:</p>
    {% endif %}
    <dl>
        {% for action in fsc.endActions %}
            <dd>
                <i class="fa {{ action.icon }} fa-fw" aria-hidden="true"></i> <a href="{{ action.link }}">{{ action.title }}</a>
                <small>{{ action.observations }}</small>
            </dd>
        {% endfor %}
        {% for tree in fsc.formTrees %}
            <dd>
                <i class="fa {{ tree.icon }} fa-fw" aria-hidden="true"></i> <a href="{{ tree.url('public') }}">{{ tree.title }}</a>
                {% if fsc.user %}
                    <span class="label">{{ tree.visitcount }}</span>
                {% endif %}
            </dd>
        {% endfor %}
    </dl>
{% endmacro %}

{% macro showNeedsLogin(appSettings, fsc) %}
    <h1>Contacto</h1>
    <p>Para poder ayudarle necesitamos que se identifique de alguna manera:</p>
    <dl>
        {% if appSettings.get('webportal','fbappid','') != '' %}
            <dd>
                <a href="{{ constant('FS_ROUTE') }}/HybridLogin?prov=facebook&return={{ fsc.url() }}">
                    <i class="fa fa-facebook fa-fw" aria-hidden="true"></i> identificarme con mi cuenta de <b>facebook</b>
                </a>
            </dd>
        {% endif %}
        {% if appSettings.get('webportal','googleappid','') != '' %}
            <dd>
                <a href="{{ constant('FS_ROUTE') }}/HybridLogin?prov=google&return={{ fsc.url() }}">
                    <i class="fa fa-google fa-fw" aria-hidden="true"></i> identificarme con mi cuenta de <b>google</b>
                </a>
            </dd>
        {% endif %}
        {% if appSettings.get('webportal','twitterappid','') != '' %}
            <dd>
                <a href="{{ constant('FS_ROUTE') }}/HybridLogin?prov=twitter&return={{ fsc.url() }}">
                    <i class="fa fa-twitter fa-fw" aria-hidden="true"></i> identificarme con mi cuenta de <b>twitter</b>
                </a>
            </dd>
        {% endif %}
    </dl>
{% endmacro %}