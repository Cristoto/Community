<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : webprojects.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the webprojects table.
-->
<table>
    <column>
        <name>creationdate</name>
        <type>date</type>
    </column>
    <column>
        <name>description</name>
        <type>text</type>
    </column>
    <column>
        <name>idcontacto</name>
        <type>integer</type>
    </column>
    <column>
        <name>idproject</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('webprojects_idproject_seq'::regclass)</default>
    </column>
    <column>
        <name>lastmod</name>
        <type>date</type>
    </column>
    <column>
        <name>license</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>name</name>
        <type>character varying(50)</type>
    </column>
    <column>
        <name>plugin</name>
        <type>boolean</type>
        <default>false</default>
    </column>
    <column>
        <name>publicrepo</name>
        <type>character varying(300)</type>
    </column>
    <column>
        <name>version</name>
        <type>double precision</type>
        <default>0</default>
    </column>
    <constraint>
        <name>webprojects_pkey</name>
        <type>PRIMARY KEY (idproject)</type>
    </constraint>
    <constraint>
        <name>ca_webprojects_contactos</name>
        <type>FOREIGN KEY (idcontacto) REFERENCES contactos (idcontacto) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_webprojects</name>
        <type>UNIQUE (name)</type>
    </constraint>
</table>