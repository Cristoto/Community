<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : issues.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the issues table.
-->
<table>
    <column>
        <name>body</name>
        <type>text</type>
    </column>
    <column>
        <name>contactroute</name>
        <type>character varying(300)</type>
    </column>
    <column>
        <name>creationdate</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>idcontacto</name>
        <type>integer</type>
    </column>
    <column>
        <name>idissue</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('issues_idissue_seq'::regclass)</default>
    </column>
    <column>
        <name>idproject</name>
        <type>integer</type>
    </column>
    <column>
        <name>idtree</name>
        <type>integer</type>
    </column>
    <column>
        <name>langcode</name>
        <type>character varying(2)</type>
    </column>
    <column>
        <name>lastip</name>
        <type>character varying(40)</type>
    </column>
    <column>
        <name>lastmod</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>title</name>
        <type>character varying(250)</type>
    </column>
    <column>
        <name>visitcount</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <constraint>
        <name>issues_pkey</name>
        <type>PRIMARY KEY (idissue)</type>
    </constraint>
</table>